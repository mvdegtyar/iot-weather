@using System
@using WeatherWeb.Models
@model WeatherViewModel
@{
    ViewData["Title"] = "Weather";

    string zoneID = "Israel Standard Time";

    TimeZoneInfo myZone = TimeZoneInfo.FindSystemTimeZoneById(zoneID);
}

<div class="row">
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Location</th>
            <th>Time</th>
            <th>Temperature</th>
            <th>Humidity</th>
            <th>Pressure</th>
        </tr>
        </thead>
        <tbody>
            @foreach (Weather data in Model.History)
            {
                <tr>
                    <td>@data.Location</td>
                    <td>@TimeZoneInfo.ConvertTime(data.Time, myZone).ToString("yyyy MM dd - hh mm")</td>
                    <td>@data.Temperature</td>
                    <td>@data.Humidity</td>
                    <td>@data.Pressure</td>
                </tr>
            }
        </tbody>
    </table>
